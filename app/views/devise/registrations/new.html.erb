<% @title="Inscription" %>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
<!-- component -->
<div class="w-full mx-auto max-w-3xl p-6 ">
    <!-- title message -->
    <div class="bg-white max-w mx-auto rounded-2xl  border-b-4 border-blue-500 overflow-hidden ">
        <div class="h-20 bg-blue-500 flex items-center ">
            <h1 class="text-white ml-4 border-2 py-2 px-4 rounded-full">Juste en 2min </h1>
            <p class=" text-white text-base ml-4 uppercase"> 
              Inscription sur LnClass
            </p>
        </div>
        <div class="py-6 px-6 text-lg tracking-wide text-center">
            <div class="">
                <div class='flex flex-wrap -mx-3 mb-6'>
                  <!-- Info personnel-->
                  <div class="personal w-full  pt-4">
                        <h2 class="text-2xl text-gray-900 border-b  border-gray-400">Remplir les informations personnelles:</h2>
                        <div class="flex items-center justify-between mt-4">
                            <div class='w-full md:w-1/2 px-3 mb-6'>
                              <%= f.text_field :first_name, class:"w-full text-base py-2 border  border-gray-300 rounded-lg focus:outline-none focus:border-green-400", placeholder:"Nom" %>
                            </div>
                            <div class='w-full md:w-1/2 px-3 mb-6'>
                             <%= f.text_field :last_name, class:"w-full text-base py-2 border  border-gray-300 rounded-lg focus:outline-none focus:border-green-400", placeholder:"Prenom" %> 
                            </div>
                        </div>
                        <div class='w-full md:w-full px-3 mb-6'>
                           <%= f.text_field :city, class:"w-full text-base py-2 border  border-gray-300 rounded-lg focus:outline-none focus:border-green-400", placeholder:"la ville de frequentation" %>
                        </div>
                        
                        <div class="flex items-center justify-between mt-4">
                            <div class='w-full md:w-1/2 px-3 mb-6'>
                               <%= f.text_field :matricule, class:"w-full text-base py-2 border  border-gray-300 rounded-lg focus:outline-none focus:border-green-400", placeholder:"Matricule.." %>
                            </div>
                            <div class='w-full md:w-1/2 px-3 mb-6'>
                              <%= f.text_field :contact, class:"w-full text-base py-2 rounded-md p-2 border-2 border-gray-600 bg-gray-50 focus:outline-none focus:border-green-400", placeholder:"N° Tel N° WhatsApp.." %>
                            </div>
                        </div>
                        <%= f.hidden_field :role, value:"Student" %>
                                           
                        <div class="w-full px-3 mb-2">
                            <div class=" border-b border-gray-500 py-3 px-5 text-sm font-semibold mr-3">Je suis </div>
                                <label class="flex radio p-1 cursor-pointer">
                                    <%= f.radio_button :gender, :Femme, class:"my-auto transform scale-125"%>
                                    <div class="title px-2">Une Femme</div>
                                </label>

                                <label class="flex radio p-1 cursor-pointer">
                                    <%= f.radio_button :gender, :Homme, class:"my-auto transform scale-125"%>
                                    <div class="title px-2"> Un Homme</div>
                                </label>
                            </div>
                        </div>                   
                    </div>

                    <!-- <hr > -->
        <div class="flex justify-center px-5">
        <%= f.submit "Terminer Inscription", disable_with: 'Submiting...', class:"border bg-blue-500  font-semibold text-white text-xl rounded-md p-3 transition duration-500 ease select-none hover:text-white hover:bg-green-600 focus:outline-none focus:shadow-outline" %>

        </div>
                </div>
            </div>
        </div>
    </div>
<% end %>