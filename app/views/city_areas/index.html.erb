<div class="container">
<p id="notice"><%= notice %></p>

<h1>City Areas</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Slug</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @city_areas.each do |city_area| %>
      <tr>
        <td><%= city_area.title %></td>
        <td><%= city_area.slug %></td>
        <td><%= city_area.user_id %></td>
        <td><%= link_to 'Show', city_area %></td>
        <td><%= link_to 'Edit', edit_city_area_path(city_area) %></td>
        <td><%= link_to 'Destroy', city_area, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New City Area', new_city_area_path, class:"bg-blue-400 border-2 border-rounded-lg p-2 font-bold " %>

</div>